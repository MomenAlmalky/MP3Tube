<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_module_2"
    android:layout_marginLeft="@dimen/margin_module_2"
    android:layout_marginRight="@dimen/margin_module_2"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardBackgroundColor="@color/colorLightBlack"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/video_photo"
                android:scaleType="centerCrop"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="@dimen/margin_module_3"
                />

            <TextView
                android:id="@+id/video_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/video_photo"
                android:layout_marginTop="@dimen/margin_module_2"
                android:maxLines="2"
                android:textSize="@dimen/body_1_muli_reg"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                />

            <TextView
                android:id="@+id/video_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/video_title"
                android:layout_marginTop="@dimen/margin_module_1.5"
                android:layout_toRightOf="@+id/video_photo"
                android:textSize="@dimen/caption_1_caps_muli_bold"
                android:textColor="@color/colorLightGrey"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>